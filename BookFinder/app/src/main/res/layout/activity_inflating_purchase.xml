<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">


    <TextView
        android:id="@+id/textViewBname_purchased"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text" />

    <TextView
        android:id="@+id/textViewCondition_purchased"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text" />
    <TextView
        android:id="@+id/textViewDelivery_status_purchased"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"/>
    <TextView
        android:id="@+id/textViewAuthor_purchased"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"

        />
    <TextView
        android:id="@+id/textViewISBN_purchased"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"

        />
    <TextView
        android:id="@+id/textViewDateTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text" />
    <TextView
        android:id="@+id/textViewPrice_purchased"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text" />

    <Button
        android:id="@+id/button_returnRefund"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:text="Cancel this Order" />

</LinearLayout>
